# https://EditorConfig.org

root = true

[*]
indent_style = space
# Reduce tab size on GitHub
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[{*.yml,*.yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

# Generated file
[infection.txt]
indent_size = unset
trim_trailing_whitespace = unset

[phpstan-baseline.neon]
indent_style = unset
